{
  "compilerOptions": {
    "target": "ES2022",       
    "module": "CommonJS",      
    "lib": ["es2022"],
    "esModuleInterop": true,
    "strict": true,            
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist/electron",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "electron/**/*.ts",
    "electron/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
